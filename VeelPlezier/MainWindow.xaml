<Window x:Class="VeelPlezier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:VeelPlezier.xaml.controls"
        mc:Ignorable="d"
        Title="MainWindow" x:ClassModifier="internal">

    <Grid>
        <Grid>
           <controls:MainScreen x:Name="MainScreen" />
        </Grid>
        
        <Grid>
            <controls:SettingsScreen x:Name="SettingsScreen" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
