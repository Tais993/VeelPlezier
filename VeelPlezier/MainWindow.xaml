        </WrapPanel>

        <WrapPanel Grid.Row="11" Grid.Column="1" HorizontalAlignment="Right">
            <Label>5 euro</Label>
            <Image Source="resources/images/note-euro-5.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="13" Grid.Column="1" HorizontalAlignment="Right">
            <Label>10 euro</Label>
            <Image Source="resources/images/note-euro-10.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="15" Grid.Column="1" HorizontalAlignment="Right">
            <Label>20 euro</Label>
            <Image Source="resources/images/note-euro-20.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="17" Grid.Column="1" HorizontalAlignment="Right">
            <Label>50 euro</Label>
            <Image Source="resources/images/note-euro-50.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="19" Grid.Column="1" HorizontalAlignment="Right">
            <Label>100 euro</Label>
            <Image Source="resources/images/note-euro-100.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="21" Grid.Column="1" HorizontalAlignment="Right">
            <Label>200 euro</Label>
            <Image Source="resources/images/note-euro-200.bmp"></Image>
            <TextBox Style="{StaticResource cashRegistryDrawer}">0</TextBox>
            <Button>Keer</Button>
        </WrapPanel>
    </Grid>
</Window>
