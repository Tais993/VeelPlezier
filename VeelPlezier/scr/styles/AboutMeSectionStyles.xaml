<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="ControlBaseStyle"
           TargetType="{x:Type Control}">

        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFF" />
    </Style>

    <Style x:Key="HyperlinkBaseStyle"
           TargetType="{x:Type Hyperlink}">

        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="RunBaseStyle"
           TargetType="{x:Type Run}">

        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="TextBlockBaseStyle"
           TargetType="{x:Type TextBlock}">

        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="TitleStyle"
           TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}">

        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>


    <Style TargetType="{x:Type Hyperlink}" BasedOn="{StaticResource HyperlinkBaseStyle}" />
    <Style TargetType="{x:Type Run}" BasedOn="{StaticResource RunBaseStyle}" />
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}" />
</ResourceDictionary>