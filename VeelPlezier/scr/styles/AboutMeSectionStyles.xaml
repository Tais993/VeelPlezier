<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
        
    <Style TargetType="{x:Type Control}" x:Key="ControlBaseStyle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFF" />
    </Style>
    
    <Style TargetType="{x:Type Hyperlink}" x:Key="HyperlinkBaseStyle">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style TargetType="{x:Type Run}" x:Key="RunBaseStyle">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockBaseStyle">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}" x:Key="TitleStyle">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    
    <Style TargetType="{x:Type Hyperlink}" BasedOn="{StaticResource HyperlinkBaseStyle}" />
    <Style TargetType="{x:Type Run}" BasedOn="{StaticResource RunBaseStyle}" />
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}" />
</ResourceDictionary>