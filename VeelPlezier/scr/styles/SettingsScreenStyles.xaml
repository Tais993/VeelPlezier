<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="ControlBaseStyle"
           TargetType="{x:Type Control}">

        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFF" />
    </Style>

    <Style x:Key="TitleCategoryLabelStyle"
           TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}">

        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="CategoryLine"
           TargetType="{x:Type Border}">

        <Setter Property="BorderThickness" Value="0,0, 2, 0" />
        <Setter Property="BorderBrush" Value="SlateGray" />
        <Setter Property="Opacity" Value="0.6" />
    </Style>


    <Style x:Key="RoundedCornersBorderStyle"
           TargetType="{x:Type Border}">

        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="Padding" Value="4, 2" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>



    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ControlBaseStyle}" />
</ResourceDictionary>